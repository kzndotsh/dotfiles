# Wallpaper
output * bg ~/Downloads/cat-waves.png fill

# Monitor
output DP-3 {
   mode 1920x1080@165.003Hz
   # adaptive_sync on
}

# Xwayland
for_window [shell="xwayland"] title_format "[XWayland] %title"

# Environment
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

exec_always autotiling-rs

include ~/.config/sway/config.d/base.conf
include ~/.config/sway/config.d/color.conf
include ~/.config/sway/config.d/variables.conf
include ~/.config/sway/config.d/bind.conf
include ~/.config/sway/config.d/launch.conf
include /etc/sway/config.d/*
