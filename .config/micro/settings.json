{
    "autosu": true,
    "basename": true,
    "clipboard": "terminal",
    "colorscheme": "simple",
    "diffgutter": true,
    "helpsplit": "hsplit",
    "initlua": true,
    "keymenu": true,
    "mkparents": true,
    "pageoverlap": 2,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "scrollbarchar": " ",
